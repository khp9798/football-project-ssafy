<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.mvc.dao.MatchDao">

    <!-- 경기 등록 -->
    <insert id="insertMatch" parameterType="com.ssafy.mvc.dto.MatchDTO">
        INSERT INTO matches (stadium_id, start_time, end_time, status)
        VALUES (#{stadiumId}, #{startTime}, #{endTime}, #{status})
    </insert>
    
    <!-- 경기 수정 -->
    <update id="updateMatch" parameterType="com.ssafy.mvc.dto.MatchDTO">
        UPDATE matches
        SET stadium_id = #{stadiumId}, 
            start_time = #{startTime}, 
            end_time = #{endTime}, 
            status = #{status}
        WHERE id = #{id}
    </update>
    
    <!-- 경기 삭제 -->
    <delete id="deleteMatch" parameterType="int">
        DELETE FROM matches
        WHERE id = #{id}
    </delete>
    
    <!-- 경기 목록 조회 -->
    <select id="searchByCondition" parameterType="map" resultType="com.ssafy.mvc.dto.MatchDTO">
        SELECT * FROM matches
        <where>
            <if test="key != null and key != 'none'">
                ${key} LIKE CONCAT('%', #{word}, '%')
            </if>
        </where>
        <if test="order != null and order != 'none'">
            ORDER BY ${order} ${orderDir}
        </if>
    </select>
    
    
    <select id="selectOne">
    	select * from matches
    	where id = #{id}
    </select>

</mapper>
